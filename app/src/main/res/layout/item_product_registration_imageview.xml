<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="4dp"
        app:strokeColor="@color/md_theme_dark_outline">

        <ImageView
            android:id="@+id/imageViewDelete"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/buttonDelete"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:contentDescription="@string/button_delete_image"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            app:icon="@drawable/close_24px"
            app:iconGravity="end"
            app:iconPadding="0dp"
            app:iconSize="20dp" />

        <TextView
            android:id="@+id/textViewIsMain"
            style="@style/Widget.MaterialComponents.TextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/primary_with_opacity_background"
            android:text="@string/representative_photo"
            android:textAlignment="center"
            android:textColor="@color/md_theme_dark_onBackground"
            android:textStyle="bold"
            android:visibility="visible" />

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>